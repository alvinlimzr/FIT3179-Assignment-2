{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 960,
  "height": 320,
  "background": "white",
  "title": { "text": "Focus countries â€” life expectancy (selected year)", "anchor": "start" },
  "params": [
  { "name": "Year", "value": 2020, "bind": { "input": "range", "min": 1960, "max": 2023, "step": 1 } }
],
  "data": { "url": "data/Life_expectancy.csv", "format": { "type": "csv" } },
  "transform": [
    {
      "filter": "indexof(['SGP','USA','CHN','IND','AUS','IDN'], datum['Country Code']) >= 0"
    },
    {
      "fold": [
        "1960","1961","1962","1963","1964","1965","1966","1967","1968","1969",
        "1970","1971","1972","1973","1974","1975","1976","1977","1978","1979",
        "1980","1981","1982","1983","1984","1985","1986","1987","1988","1989",
        "1990","1991","1992","1993","1994","1995","1996","1997","1998","1999",
        "2000","2001","2002","2003","2004","2005","2006","2007","2008","2009",
        "2010","2011","2012","2013","2014","2015","2016","2017","2018","2019",
        "2020","2021","2022","2023","2024"
      ],
      "as": ["year", "lifeRaw"]
    },
    { "calculate": "toNumber(datum.lifeRaw)", "as": "life" },
    { "calculate": "toNumber(datum.year)", "as": "yearNum" },
    { "filter": "datum.yearNum == Year" },

    {
      "lookup": "Country Code",
      "from": {
        "data": { "url": "data/gdp_pc_cleaned.csv", "format": { "type": "csv" } },
        "key": "Country Code",
        "fields": [
          "1960","1970","1980","1990","2000","2010","2015",
          "2018","2019","2020","2021","2022","2023","2024",
          "Country Name"
        ]
      },
      "as": [
        "g1960","g1970","g1980","g1990","g2000","g2010","g2015",
        "g2018","g2019","g2020","g2021","g2022","g2023","g2024",
        "GDP Country"
      ]
    },
    {
      "calculate": "Year <= 1965 ? 1960 : Year <= 1975 ? 1970 : Year <= 1985 ? 1980 : Year <= 1995 ? 1990 : Year <= 2005 ? 2000 : Year <= 2012 ? 2010 : Year <= 2017 ? 2015 : Year <= 2018 ? 2018 : Year <= 2019 ? 2019 : Year <= 2020 ? 2020 : Year <= 2021 ? 2021 : Year <= 2022 ? 2022 : Year <= 2023 ? 2023 : 2024",
      "as": "gYear"
    },
    { "calculate": "toNumber(datum['g' + datum.gYear])", "as": "gdp" },
    {
      "filter": "isValid(datum.life) && isFinite(datum.life) && isValid(datum.gdp) && isFinite(datum.gdp)"
    },
    { "calculate": "datum['Country Code']", "as": "Focus" }
  ],

  "layer": [
    {
      "mark": { "type": "bar", "cornerRadiusEnd": 2 },
      "encoding": {
        "x": { "field": "life", "type": "quantitative", "title": "Life expectancy (years)" },
        "y": {
          "field": "Country Name",
          "type": "ordinal",
          "sort": "-x",
          "title": "Country"
        },
        "color": {
          "field": "Focus",
          "type": "nominal",
          "legend": { "title": null },
          "scale": {
            "domain": ["SGP","USA","CHN","IND","AUS","IDN"],
            "range": ["#2d6cdf","#8a3ffc","#0f9960","#d47400","#0b84a5","#e03a3e"]
          }
        },
        "tooltip": [
          { "field": "Country Name", "title": "Country" },
          { "field": "yearNum", "title": "Year" },
          { "field": "life", "title": "Life exp. (yrs)", "format": ".1f" },
          { "field": "gdp", "title": "GDP per cap. (US$)", "format": ",.0f" },
          { "field": "gYear", "title": "GDP year used" }
        ]
      }
    },
    {
      "mark": { "type": "text", "align": "left", "dx": 4, "fontSize": 11 },
      "encoding": {
        "x": { "field": "life", "type": "quantitative" },
        "y": { "field": "Country Name", "type": "ordinal", "sort": "-x" },
        "text": { "field": "life", "format": ".1f" },
        "color": { "value": "#1f2937" }
      }
    }
  ],
  "config": { "view": { "stroke": null } }
}
